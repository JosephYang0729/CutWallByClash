<Window x:Class="CutWallByClash.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="牆體開口建立工具" Height="665" Width="720" Icon="pack://application:,,,/CutWallByClash;component/Resources/logo.ico"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FFF0F0F0">

    <Window.Resources>
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF003366"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#FF003366" CornerRadius="5,5,0,0" Padding="10,5">
                                        <ContentPresenter ContentSource="Header" 
                                                        TextElement.Foreground="White"
                                                        TextElement.FontWeight="SemiBold"/>
                                    </Border>
                                    <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ModernRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="BorderBrush" Value="#FF003366"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF003366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF004488"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF002244"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF666666"/>
                                <Setter Property="Foreground" Value="#FF999999"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#FFE0E0E0"/>
            <Setter Property="Foreground" Value="#FF003366"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="8"/>
        </Style>

        <Style x:Key="ModernTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="LabelTextBlock" TargetType="TextBlock" BasedOn="{StaticResource ModernTextBlock}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="20" MinHeight="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 第一部分：開口設定 -->
            <GroupBox Grid.Row="0" Header="開口設定" Style="{StaticResource ModernGroupBox}" Width="650" HorizontalAlignment="Left">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 左側：開口類型和參數 -->
                    <StackPanel Grid.Column="0" Margin="15">
                        <!-- 開口類型選擇 -->
                        <Label Content="開口類型" FontWeight="SemiBold" Background="#FF003366" Foreground="White" 
                               Padding="10,5" Margin="0,0,0,10" HorizontalContentAlignment="Center"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <RadioButton x:Name="rbRectangular" Grid.Column="0" Content="矩形開口" IsChecked="True" 
                                   Checked="OnOpeningTypeChanged" Style="{StaticResource ModernRadioButton}" 
                                   HorizontalAlignment="Center"/>
                            <RadioButton x:Name="rbCircular" Grid.Column="1" Content="圓形開口" 
                                   Checked="OnOpeningTypeChanged" Style="{StaticResource ModernRadioButton}"
                                   HorizontalAlignment="Center"/>
                        </Grid>

                        <!-- 參數設定 -->
                        <Label Content="參數設定" FontWeight="SemiBold" Background="#FF003366" Foreground="White" 
                               Padding="10,5" Margin="0,0,0,10" HorizontalContentAlignment="Center"/>

                        <!-- 矩形參數 -->
                        <StackPanel x:Name="pnlRectangular">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="開口距離(H):" Style="{StaticResource LabelTextBlock}"/>
                                <TextBox x:Name="txtRectWidth" Grid.Column="1" Text="100" Margin="10,0" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Grid.Column="2" Text="mm" Style="{StaticResource LabelTextBlock}" HorizontalAlignment="Center"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="開口距離(V):" Style="{StaticResource LabelTextBlock}"/>
                                <TextBox x:Name="txtRectHeight" Grid.Column="1" Text="50" Margin="10,0" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Grid.Column="2" Text="mm" Style="{StaticResource LabelTextBlock}" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <!-- 圓形參數 -->
                        <StackPanel x:Name="pnlCircular">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="開口距離:" Style="{StaticResource LabelTextBlock}"/>
                                <TextBox x:Name="txtCircularDiameter" Grid.Column="1" Text="12.7" Margin="10,0" Style="{StaticResource ModernTextBox}"/>
                                <TextBlock Grid.Column="2" Text="mm" Style="{StaticResource LabelTextBlock}" HorizontalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                    <!-- 右側：尺寸圖片 -->
                    <Border Grid.Column="2" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                        <Grid>
                            <!-- 矩形開口圖片 -->
                            <Image x:Name="imgRectangular" 
                               Stretch="Uniform"
                               Source="pack://application:,,,/CutWallByClash;component/Resources/矩形距離.png"
                               Visibility="Visible"
                               Margin="5"/>

                            <!-- 圓形開口圖片 -->
                            <Image x:Name="imgCircular" 
                               Stretch="Uniform"
                               Source="pack://application:,,,/CutWallByClash;component/Resources/圓形距離.png"
                               Visibility="Collapsed"
                               Margin="5"/>
                        </Grid>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- 第二部分：MEP元件選擇和執行操作 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="325"/>
                    <ColumnDefinition Width="325"/>
                </Grid.ColumnDefinitions>

                <!-- MEP元件選擇 -->
                <GroupBox Grid.Column="0" Header="選擇MEP元件類型" Style="{StaticResource ModernGroupBox}" Height="200" Margin="0,0,5,0">
                    <Grid Margin="10,10,1,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 第一排：管道和風管 -->
                        <Grid Grid.Row="0" Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkPipes" Grid.Column="0" Content="管道 (Pipes)" IsChecked="True" 
                                     Style="{StaticResource ModernCheckBox}" Margin="5" HorizontalAlignment="Left"/>
                            <CheckBox x:Name="chkDucts" Grid.Column="1" Content="風管 (Ducts)" IsChecked="True" 
                                     Style="{StaticResource ModernCheckBox}" Margin="5" HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- 第二排：電管和電纜架 -->
                        <Grid Grid.Row="1" Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkConduit" Grid.Column="0" Content="電管 (Conduit)" IsChecked="True" 
                                     Style="{StaticResource ModernCheckBox}" Margin="5" HorizontalAlignment="Left"/>
                            <CheckBox x:Name="chkCableTray" Grid.Column="1" Content="電纜架 (Cable Tray)" IsChecked="True" 
                                     Style="{StaticResource ModernCheckBox}" Margin="5" HorizontalAlignment="Left"/>
                        </Grid>

                        <!-- 第三排：撓性管 -->
                        <Grid Grid.Row="2" Margin="0,5">
                            <CheckBox x:Name="chkFlexPipe" Content="撓性管 (Flex Pipe)" IsChecked="True" 
                                     Style="{StaticResource ModernCheckBox}" Margin="5" HorizontalAlignment="Left"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- 執行操作 -->
                <GroupBox Grid.Column="1" Header="執行操作" Style="{StaticResource ModernGroupBox}" Height="200" Margin="5,0,0,0">
                    <StackPanel Margin="10" VerticalAlignment="Center">
                        <Button x:Name="btnExecute" Content="執行碰撞偵測並建立開口" Height="50"
                                Click="OnExecute" Style="{StaticResource ModernButton}" FontSize="14"/>

                        <ProgressBar x:Name="progressBar" Margin="0,20,0,10" Style="{StaticResource ModernProgressBar}" 
                               Minimum="0" Maximum="100"/>
                        <TextBlock x:Name="txtStatus" Text="準備就緒" HorizontalAlignment="Center" 
                              Style="{StaticResource ModernTextBlock}" FontStyle="Italic"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
<Window x:Class="CutWallByClash.UI.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="開口建立結果" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#FFF0F0F0"
        Icon="pack://application:,,,/CutWallByClash;component/Resources/favicon.ico">

    <Window.Resources>
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Background" Value="#FFFFFFFF"/>
            <Setter Property="BorderBrush" Value="#FF003366"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#FF003366" CornerRadius="5,5,0,0" Padding="10,5">
                                        <ContentPresenter ContentSource="Header" 
                                                        TextElement.Foreground="White"
                                                        TextElement.FontWeight="SemiBold"/>
                                    </Border>
                                    <ContentPresenter Grid.Row="1" Margin="{TemplateBinding Padding}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF003366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF004488"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF002244"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="20" MinHeight="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- 結果統計 -->
        <GroupBox Grid.Row="0" Header="執行結果統計" Style="{StaticResource ModernGroupBox}" Width="740" HorizontalAlignment="Left">
            <StackPanel Margin="10">
                <TextBlock x:Name="txtResultsSummary" 
                          Text="開口建立完成" 
                          Style="{StaticResource ModernTextBlock}" 
                          FontWeight="SemiBold"
                          FontSize="14"/>
                <TextBlock x:Name="txtExecutionTime" 
                          Text="執行時間: --" 
                          Style="{StaticResource ModernTextBlock}" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- 結果表格 -->
        <GroupBox Grid.Row="1" Header="開口建立詳細結果" Style="{StaticResource ModernGroupBox}" Width="740" HorizontalAlignment="Left">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 提示語 -->
                <TextBlock Grid.Row="0" Text="點擊表格項目兩下，可在3D視圖中定位並選取牆體和開口元件" 
                          Margin="10,5" 
                          Style="{StaticResource ModernTextBlock}" 
                          FontStyle="Italic"
                          Foreground="#FF666666"/>
                
                <DataGrid x:Name="dgResults" Grid.Row="1" 
                     Margin="10" 
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserDeleteRows="False"
                     IsReadOnly="True"
                     GridLinesVisibility="Horizontal"
                     HeadersVisibility="Column"
                     SelectionMode="Single"
                     Background="#FFFFFFFF"
                     BorderBrush="#FF003366"
                     BorderThickness="1"
                     PreviewMouseDoubleClick="OnResultsDoubleClick">
                    
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#FFFFFFFF"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE6F3FF"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFCCE6FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="序號" Binding="{Binding Index}" Width="50"/>
                    <DataGridTextColumn Header="牆ID" Binding="{Binding WallId}" Width="80"/>
                    <DataGridTextColumn Header="牆名稱" Binding="{Binding WallName}" Width="100"/>
                    <DataGridTextColumn Header="MEP類型" Binding="{Binding MEPType}" Width="70"/>
                    <DataGridTextColumn Header="MEP ID" Binding="{Binding MEPId}" Width="70"/>
                    <DataGridTextColumn Header="元件尺寸" Binding="{Binding ElementSize}" Width="90"/>
                    <DataGridTextColumn Header="開口ID" Binding="{Binding OpeningId}" Width="70"/>
                    <DataGridTemplateColumn Header="操作" Width="140">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="修改" Width="65" Height="35" Margin="1" 
                                            Click="OnModifyOpening" Tag="{Binding}"
                                            Style="{StaticResource ModernButton}" FontSize="12"/>
                                    <Button Content="刪除" Width="65" Height="35" Margin="1" 
                                            Click="OnDeleteOpening" Tag="{Binding}"
                                            Style="{StaticResource ModernButton}" FontSize="12"
                                            Background="#FFD32F2F"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF003366"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="8,5"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>


                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="TextBlock.TextDecorations" Value="None"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="TextBlock.TextDecorations" Value="None"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="TextBlock.TextDecorations" Value="None"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
            </DataGrid>
            </Grid>
        </GroupBox>

        <!-- 開口尺寸修改 -->
        <GroupBox x:Name="grpOpeningEdit" Grid.Row="2" Header="開口尺寸修改" Style="{StaticResource ModernGroupBox}" 
                  Width="740" HorizontalAlignment="Left" Visibility="Collapsed">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- 左側：參數設定 -->
                <StackPanel Grid.Column="0" Margin="15">
                    <!-- 開口類型顯示 -->
                    <Label x:Name="lblOpeningType" Content="開口類型" FontWeight="SemiBold" Background="#FF003366" Foreground="White" 
                           Padding="10,5" Margin="0,0,0,10" HorizontalContentAlignment="Center"/>

                    <!-- 參數設定 -->
                    <Label Content="參數設定" FontWeight="SemiBold" Background="#FF003366" Foreground="White" 
                           Padding="10,5" Margin="0,0,0,10" HorizontalContentAlignment="Center"/>

                    <!-- 矩形參數 -->
                    <StackPanel x:Name="pnlRectangularEdit" Visibility="Visible">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="開口寬度:" Style="{StaticResource ModernTextBlock}" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox x:Name="txtEditRectWidth" Grid.Column="1" Margin="10,0" Background="#FFFFFFFF" Foreground="#FF333333" BorderBrush="#FF003366" BorderThickness="1" Padding="8,5" FontSize="12"/>
                            <TextBlock Grid.Column="2" Text="mm" Style="{StaticResource ModernTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="開口長度:" Style="{StaticResource ModernTextBlock}" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox x:Name="txtEditRectHeight" Grid.Column="1" Margin="10,0" Background="#FFFFFFFF" Foreground="#FF333333" BorderBrush="#FF003366" BorderThickness="1" Padding="8,5" FontSize="12"/>
                            <TextBlock Grid.Column="2" Text="mm" Style="{StaticResource ModernTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="開口高度:" Style="{StaticResource ModernTextBlock}" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox x:Name="txtEditRectElevation" Grid.Column="1" Margin="10,0" Background="#FFFFFFFF" Foreground="#FF333333" BorderBrush="#FF003366" BorderThickness="1" Padding="8,5" FontSize="12"/>
                            <TextBlock Grid.Column="2" Text="m" Style="{StaticResource ModernTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                    <!-- 圓形參數 -->
                    <StackPanel x:Name="pnlCircularEdit" Visibility="Collapsed">
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="直徑:" Style="{StaticResource ModernTextBlock}" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox x:Name="txtEditCircularDiameter" Grid.Column="1" Margin="10,0" Background="#FFFFFFFF" Foreground="#FF333333" BorderBrush="#FF003366" BorderThickness="1" Padding="8,5" FontSize="12"/>
                            <TextBlock Grid.Column="2" Text="mm" Style="{StaticResource ModernTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="開口高度:" Style="{StaticResource ModernTextBlock}" VerticalAlignment="Center" FontWeight="Medium"/>
                            <TextBox x:Name="txtEditCircularElevation" Grid.Column="1" Margin="10,0" Background="#FFFFFFFF" Foreground="#FF333333" BorderBrush="#FF003366" BorderThickness="1" Padding="8,5" FontSize="12"/>
                            <TextBlock Grid.Column="2" Text="m" Style="{StaticResource ModernTextBlock}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                    <!-- 操作按鈕 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="btnSaveChanges" Content="儲存修改" Style="{StaticResource ModernButton}" 
                                Click="OnSaveChanges" Width="120" Margin="5"/>
                        <Button x:Name="btnCancelEdit" Content="取消" Style="{StaticResource ModernButton}" 
                                Click="OnCancelEdit" Width="80" Margin="5" Background="#FF666666"/>
                    </StackPanel>
                </StackPanel>

                <!-- 右側：尺寸圖片 -->
                <Border Grid.Column="2" Background="White" BorderBrush="#FFCCCCCC" BorderThickness="1" CornerRadius="5" Margin="10">
                    <Grid>
                        <!-- 矩形開口圖片 -->
                        <Image x:Name="imgEditRectangular" 
                           Stretch="Uniform"
                           Source="pack://application:,,,/CutWallByClash;component/Resources/矩形開口尺寸.png"
                           Visibility="Visible"
                           Margin="5"/>

                        <!-- 圓形開口圖片 -->
                        <Image x:Name="imgEditCircular" 
                           Stretch="Uniform"
                           Source="pack://application:,,,/CutWallByClash;component/Resources/圓形開口尺寸.png"
                           Visibility="Collapsed"
                           Margin="5"/>
                    </Grid>
                </Border>
            </Grid>
        </GroupBox>

        <!-- 底部按鈕 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnClose" Content="關閉" Style="{StaticResource ModernButton}" 
                    Click="OnClose" Width="100"/>
        </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>